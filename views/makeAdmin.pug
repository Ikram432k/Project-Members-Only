extends layout

block content

  if (!user.admin)  
    form.auth-form(action="/admin" method="POST")
      h2= title
      div
        label(for="passcode") Enter the Admin Passcode: 
        input#passcode(type="password" name="passcode" required="true")
        if (passcodeError)
          p(style="color: red") #{passcodeError}
      button(type="submit") Submit Passcode


    if (errors)
      p #{errors}

  else
    div.auth-form
      h2  You're a admin!
      button.cancel
        a.delete(href='/') Back to Home