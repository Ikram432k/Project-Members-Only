extends layout

block content
  div.formView
    form.auth-form(method='POST' action='')
      div
        label(for='title') Title:
        input#title.form-control(type='text', placeholder='title of message' name='title' )
      div
        label(for='text') Text:
        input#text.form-control(type='text', placeholder='Enter your message' name='text' )
      button.btn.btn-primary(type='submit') Submit 
      //- button.cancel
      //-   a.delete(href='/') cancel
    if errors
      ul
        for error in errors
          li!= error.msg
